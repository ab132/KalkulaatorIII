<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip">

    <TextView
        android:id="@+id/calcOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:text="4+2+3"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
        <!--app:layout_heightPercent="5%"
        app:layout_widthPercent="33%" /> -->

    <TextView
        android:id="@+id/calcResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/calcOperation"
        android:layout_toEndOf="@id/calcOperation"
        android:paddingLeft="10dp"
        android:text="21321"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="RtlCompat" />
       <!-- app:layout_heightPercent="5%"
        app:layout_widthPercent="34%" -->


    <TextView
        android:id="@+id/calcTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/calcOperation"
        android:layout_toEndOf="@+id/calcResult"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:singleLine="true"
        android:text="TextVisew"
        tools:ignore="RtlCompat" />
       <!-- app:layout_heightPercent="5%"
        app:layout_widthPercent="33%" -->


    <LinearLayout
        android:id="@+id/operationListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:orientation="vertical"></LinearLayout>


</android.support.percent.PercentRelativeLayout>